<h1><%= @category.name %> </h1>

<ul>
  <% @category.bookmarks.each do |bookmark| %>
    <li>
     <h3> <%= bookmark.recipe.name %> </h3>
     <p><%= bookmark.recipe.description %></p>
     <%= link_to "Delete", bookmark_path(bookmark.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>

<%= link_to "Add recipe", new_category_bookmark_path(@category.id) %>

<%= link_to "Back", categories_path %>
