
<div class="banner" style="background-image: url(<%= image_path 'banner.png' %>)">
    <div>
      <h1>Cookbook</h1>
      <h3>Save your favourite recipes</h3>
    </div>
</div>

<div class="container">
  <div class = "info-top">
    <h2>List of Categories</h2>
  <%= link_to "New Category", new_category_path, class: "btn custom-btn text-white" %>
  </div>

  <div class="cards">
    <% @categories.each do |category| %>

    <%= link_to category_path(category) do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
          <div>
            <h3><%= category.name %></h3>
            <p><%= category.bookmarks.count %> recipes</p>
          </div>
      </div>
      <% end %>

    <% end %>
  </div>
</div>
